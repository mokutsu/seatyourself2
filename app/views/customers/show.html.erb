<div class="profile_container">
<h1 class="profile_title"> My Profile</h1>


<div class="update_profile">
  <%= link_to 'Update profile', edit_customer_path(current_customer) %>
</div>

<div class="delete_profile">
  <%= link_to 'Delete profile', current_customer, method: :delete, data: {confirm: "Are you sure you want to leave us?"} %>
</div>

  <div class="profile_name">
    <span class="prof_label">Name:</span> <%= current_customer.name %>
  </div>

  <div>
      <span class="prof_label">Email:</span><%= current_customer.email %>
  </div>

<div>
  <span class="prof_label">Reservations:</span>
  <% current_customer.reservations.each do |reservation| %>
    <ul>
      <li> <%= reservation.restaurant.name %> <%= reservation.date %> <%= chop_time(reservation.time) %>
      </li><%= link_to 'View Reservation Details', restaurant_reservation_path(restaurant_id: reservation.restaurant_id, id: reservation.id) %>
    </ul>
  <% end%>
</div>
</div>
