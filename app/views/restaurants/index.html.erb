<section id="carousel_banner">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>

    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
       <img src="https://drscdn.500px.org/photo/original/store/139863569/m%3D900_k%3D2_b%3D2_dpi%3D300_attachment%3D1_tags%3D1/5b55eaaae444ba161b589ef7c2ef6a88" width="1400px">
       <div class="carousel-caption">
        <p class="carousel_desc">Book Tables With Ease.</p>
      <!-- </div> -->
      </div>
    </div>

    <div class="item">
      <img src="https://drscdn.500px.org/photo/original/store/124067803/m%3D900_k%3D2_b%3D2_dpi%3D300_attachment%3D1_tags%3D1/e96cc182b153a98f74deaade7e3b7f7f" width="1400px">
      <div class="carousel-caption">
       <p class="carousel_desc">Discover New Local Restaurants with just one click.</p>
     </div>
    </div>

    <div class="item">
      <img src="https://drscdn.500px.org/photo/129497793/q%3D85_w%3D560_s%3D1/c96349379d1467d1c54555a34224dd11" width="1400px">
      <div class="carousel-caption">
       <p class="carousel_desc">Have a Craving? We got you covered!</p>
     </div>
    </div>


  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</section>

<section id="restaurants_container">
  <% if session[:account_type] == 'admin' %>
    <%= link_to 'Add a Restaurant', new_restaurant_path, class:'add_resto' %>
  <%end%>

  <h2 class="rest_title">Discover New Restaurants</h2>
  <p class="rest_desc">Treat Your Tastebuds. Eat anywhere, at any time. </p>



  <% @restaurants.each do |restaurant| %>
    <div class="restaurant">
      <div class="restaurant_image">
        <%= link_to image_tag(restaurant.img_link),restaurant_path(restaurant)%>
      </div>
      <p class="restaurant_name"><%=restaurant.name%></p>
      <p class="restaurant_category"><%=restaurant.category.name%></p>
    </div>
  <% end %>

</section>
