
<div class = 'flash_notices'>
  <% if @restaurant.errors.any? %>
    <% @restaurant.errors.full_messages.each do |msg| %>
    <ul>
      <li><%= msg %></li>
    </ul>
    <% end %>
  <% end %>
</div>

<div>
  <%= form_for @restaurant do |f| %>
    <div>
      <%= f.label :name, "Name"%>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :opening, "Opening Time"%>
      <%= f.time_field :opening %>
    </div>

    <div>
      <%= f.label :closing, "Closing Time"%>
      <%= f.time_field :closing %>
    </div>

    <div>
      <%= f.label :capacity, "Capacity" %>
      <%= f.text_field :capacity %>
    </div>
    <div>

      <%= f.label :category, "Categories"%>
      <%= f.collection_select(:category_id, Category.all, :id, :name) %>

    </div>
    <div>
      <%= f.submit 'Go! ' %>
    </div>
  <% end %>
</div>
